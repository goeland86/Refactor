# This specifies the base Ubuntu system
BASEIMAGE_URL=https://redirect.armbian.com/pine64/Buster_current
BASEIMAGE=armbian_pine64_current_$(date --iso-8601).7z

ANSIBLE_PLATFORM_VARS='{"platform":"recore", "packaging":"apt"}'

function decompress {
	mkdir -p ./recore-image
	7zr e $BASEIMAGE -o./recore-image/
	mv ./recore-image/armbian* $TARGETIMAGE
	rm -r ./recore-image
}
